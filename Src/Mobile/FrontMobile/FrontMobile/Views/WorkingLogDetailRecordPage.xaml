<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FrontMobile.Views.WorkingLogDetailRecordPage"
             Title="工作日誌明細紀錄"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="儲存"
            Command="{Binding SaveCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialDesignIcons"
                    Glyph="&#xF0CFB;"
                    Size="30"
                    Color="White" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid
        RowSpacing="0" ColumnSpacing="0"
        >
        <ScrollView
            Orientation="Both"
            Margin="15,10"
            >
            <StackLayout
                Spacing="0"
                >
                <Label 
                    Text="專案" FontSize="14"/>
                <Picker
                    ItemsSource="{Binding ProjectItemsSource}"
                    SelectedItem="{Binding ProjectSelectedItem}"
                    Title="請選擇 專案"
                    ItemDisplayBinding="{Binding Name}">
                </Picker>

                <Label 
                    Text="工作項目" FontSize="14"/>
                <Entry
                    Text="{Binding SelectedItem.Title}"
                    />

                <Label 
                    Text="工作項目說明 " FontSize="14"/>
                <Editor
                    AutoSize="TextChanges"
                    Text="{Binding SelectedItem.Summary}"
                    />

                <Label 
                    Text="時數" FontSize="14"/>
                <Entry
                    Text="{Binding SelectedItem.Hours, StringFormat='{0:N1}'}"
                    Keyboard="Numeric"
                    />

                <Button 
                    Margin="20,30"
                    IsVisible="{Binding ShowDeleteButton}"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="24"
                    Text="刪除"
                    Command="{Binding DeleteCommand}"/>
            </StackLayout>

        </ScrollView>
    </Grid>

</ContentPage>