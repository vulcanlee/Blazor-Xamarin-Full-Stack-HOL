@page "/"
@namespace Backend.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
@using Backend.Helpers

@{
    // https://docs.microsoft.com/zh-tw/aspnet/core/blazor/security/server/additional-scenarios?view=aspnetcore-6.0
    var ip = HttpContext?.GetRemoteIPAddress().ToString();
}
<component type="typeof(App)" param-SourceIP="@ip" render-mode="ServerPrerendered" />
